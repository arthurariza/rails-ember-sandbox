<h1 class='my-3'>Songs</h1>

<div class='container'>
  <div class='row'>
    <div class='col-6'>
      <label>
        <span>What song do you wanna listen to?</span>
        <Input @value={{this.query}} class='form-control' />
      </label>
    </div>
    <div class='col-6'>
      <div class='container'>
        <div class='row'>
          <div class='col-6'>
            <div class='form-floating mb-3'>
              <Input
                @value={{this.currentSong.name}}
                class='form-control'
                id='name'
              />
              <label for='name' name='name'>Song Title</label>
            </div>
            <div class='form-floating mb-3'>
              <Input
                @value={{this.currentSong.artist}}
                class='form-control'
                id='artist'
              />
              <label for='artist' name='artist'>Artist</label>
            </div>
          </div>
          <div class='col-6'>
            <div class='form-floating mb-3'>
              <Input
                @value={{this.currentSong.album}}
                class='form-control'
                name='album'
                id='album'
              />
              <label for='album' name='album'>Album Name</label>
            </div>
            <div class='form-floating mb-3'>
              <Input
                @value={{this.currentSong.duration}}
                class='form-control'
                name='duration'
                id='duration'
              />
              <label for='duration' name='duration'>Duration (Seconds)</label>
            </div>
          </div>
        </div>
        <button
          type='button'
          class='btn btn-primary btn-lg'
          {{on 'click' this.createSong}}
        >Create</button>
      </div>
    </div>
  </div>
</div>

<div class='container my-4'>
  <div class='row'>
    <Songs::Filter @songs={{@songs}} @query={{this.query}} as |songs|>
      {{#each songs as |song|}}
        <div class='col px-0'>
          <Songs::Song @song={{song}} @deleteSong={{this.deleteSong}} />
        </div>
      {{/each}}
    </Songs::Filter>
  </div>
</div>